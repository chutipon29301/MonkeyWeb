extends htmlTemplate
block head
    -const pageTitle = "Upload Receipt"
    link(href="css/component.css", rel="stylesheet")
block script
    script(src="js/custom-file-input.js")
    script(src="js/regRc.min.js")
block body
    .container-fluid
        .row
            .col
                h2.mt-2#receiptHead='รายละเอียดการโอนเงินคอร์ส '+qname
                h5(style="color:red") *โปรดอ่านขั้นตอนการโอนเงินอย่างละเอียด*
        .row
            .col.col-md-4
                img.img-fluid(src="images/scb.png")
            .col.col-md-4
                p.money.d-block.d-sm-none(style="color:red;background-color:yellow"): strong='ชำระเงินจำนวน '+ (config.coursePrice*courseNumber) + ' บาท'
