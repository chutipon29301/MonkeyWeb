extends htmlTemplate
block head
    -const pageTitle = "Student CheckI/O"
    style.
        .check-btn {
            height: 25vh;
            width: 100%;
            margin-bottom: 15px;
            font-size: 2.5em;
        }
block script
    script(type="text/javascript" src="js/sha3.js")
    script(src="js/studentCheck.min.js")
block body
    .container-fluid
        .row
            .col-12.col-md-6
                .form-group
                    label
                        span.fas.fa-user
                        |&nbsp;Student ID
                    input#std-id.form-control(type='number')
            .col-12.col-md-6
                .form-group
                    label
                        span.fas.fa-lock
                        |&nbsp;Student Password
                    input#std-pwd.form-control(type='password')
        .row
            .col-12.col-md-6
                button#check-in.btn.check-btn.btn-success Check In
            .col-12.col-md-6
                button#check-out.btn.check-btn.btn-danger Check Out
