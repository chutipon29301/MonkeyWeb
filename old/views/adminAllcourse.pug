extends htmlTemplate
block head
    - var pageTitle = "All Course"
    - if(webUser.position==="tutor")pageTitle="My Course"
block script
    script(src="js/adminAllCourse.min.js")
block body
    .container-fluid
        .row
            div#filterPanel.col-12.col-md-3.col-xl-2
                h1.mt-10 Course
                form
                    .form-group
                        label
                            span.fa.fa-lg.fa-th-large &nbsp;
                            |Quarter
                        select.form-control#quarter(onChange="quarterChange()")
                form(class=webUser.position === "tutor" ? "invisible" : "")
                    .form-group
                        label
                            span.fa.fa-lg.fa-filter &nbsp;
                            |Filter
                        select.form-control#subject(onChange="getAllCourseContent()")
                            option(value="all") All Subject
                            option(value="M") Math
                            option(value="P") Physics
                            option(value="E") English
                            option(value="C") Chemistry
                            option(value="S") Science
                form(class=webUser.position === "tutor" ? "invisible" : "")
                    .form-group
                        select.form-control#grade(onChange="getAllCourseContent()")
                            option(value="all") All grade
                            option(value="1") P1
                            option(value="2") P2
                            option(value="3") P3
                            option(value="4") P4
                            option(value="5") P5
                            option(value="6") P6
                            option(value="7") S1
                            option(value="8") S2
                            option(value="9") S3
                            option(value="10") S4
                            option(value="11") S5
                            option(value="12") S6
                form(class=webUser.position === "tutor" ? "invisible" : "")
                    .form-group
                        select.form-control#name(onChange="getAllCourseContent()")
                            option(value="all") All Tutor
                            each i in tutor
                                option(value=i.nicknameEn)= i.nicknameEn
                form(class=webUser.position === "tutor" ? "invisible" : "")
                    .form-group
                        select.form-control#time(onChange="getAllCourseContent()")
                            option(value="all") All Time
                            option(value="176400000") Sat 8
                            option(value="183600000") Sat 10
                            option(value="194400000") Sat 13
                            option(value="201600000") Sat 15
                            option(value="262800000") Sun 8
                            option(value="270000000") Sun 10
                            option(value="280800000") Sun 13
                            option(value="288000000") Sun 15
                form(class=webUser.position === "tutor" ? "invisible" : "")
                    .row#level
                        label.checkbox-inline.col
                            input(type='checkbox', value='a', checked, name="options[]", onClick="getAllCourseContent()")
                            | a
                        label.checkbox-inline.col
                            input(type='checkbox', value='b', checked, name="options[]", onClick="getAllCourseContent()")
                            | b
                        label.checkbox-inline.col
                            input(type='checkbox', value='c', checked, name="options[]", onClick="getAllCourseContent()")
                            | c
                        label.checkbox-inline.col
                            input(type='checkbox', value='x', checked, name="options[]", onClick="getAllCourseContent()")
                            | x
                        label.checkbox-inline.col
                            input(type='checkbox', value='g', checked, name="options[]", onClick="getAllCourseContent()")
                            | g
                        label.checkbox-inline.col
                            input(type='checkbox', value='z', checked, name="options[]", onClick="getAllCourseContent()")
                            | z
                        label.checkbox-inline.col
                            input(type='checkbox', value='m', checked, name="options[]", onClick="getAllCourseContent()")
                            | m
                        label.checkbox-inline.col
                            input(type='checkbox', value='o', checked, name="options[]", onClick="getAllCourseContent()")
                            | o
                a(href="adminCourseTable" class=webUser.position === "tutor" ? "invisible" : "btn btn-link col")
                    span.fa.fa-lg.fa-book
                    |คัมภีร์เทวดา
            div.col-12.col-md-9.offset-md-3.col-xl-10.offset-xl-2.p-0
                .table-responsive
                    table.table.table-hover
                        thead
                            tr
                                th.text-center(width='10%') No.
                                th.text-center(width='20%') CourseName
                                th.text-center(width='10%') Day
                                th.text-center(width='20%') Time
                                th.text-center(width='15%') Tutor
                                th.text-center(width='10%') Student
                                th.text-center(width='15%') Room
                        tbody#allCourseTable